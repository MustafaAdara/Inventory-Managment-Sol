@page "{id}"
@model _DetailsModel
@{
    Layout = "";
}

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title"> @DetailsResource.Header</h3>
            <div class="col text-end">
                <a onclick="getModalAction(event,'@Url.Page($"/ItemTypes/_Edit",new {area="Config",id=Model.Input!.Id})')" data-target="#detailsItemTypeModal" title="@GlobalSharedResource.Edit" class="btn text-warning border">
                    <i class="fas fa-edit"></i>
                </a>

                <button type="button" class="btn text-secondary border" data-bs-dismiss="modal" aria-label="@GlobalSharedResource.Back" title="@GlobalSharedResource.Back">
                    <i class="fas fa-chevron-left"></i>
                </button>
            </div>
        </div>

            <div class="modal-body">
                <div class="row">
                    <dl class="row">
                        <dt class="col-md-2 col-sm-4">@Html.DisplayNameFor(model => model.Input!.Name)</dt>
                        <dd class="col-md-4 col-sm-8">@Model.Input.Name</dd>
                        <dt class="col-md-2 col-sm-4">@Html.DisplayNameFor(model => model.Input!.Description)</dt>
                    <dd class="col-md-4 col-sm-8">@Model.Input.Description</dd>

                    </dl>
                </div>
            </div>

    </div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

}

